{
  "name": "soundify",
  "version": "2.1.0",
  "main": "dist-electron/main/index.js",
  "author": "Lars-Ivar Giskegjerde",
  "license": "MIT",
  "private": true,
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/",
      "API_URL": "http://localhost:8080"
    }
  },
  "build": {
    "appId": "soundify",
    "includeSubNodeModules": "true",
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      "./dist/icons/**"
    ],
    "files": [
      "**/*",
      "./dist/**/*",
      "./dist/icons/**"
    ],
    "linux": {
      "target": [
        "appimage"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "portable"
      ]
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "e2e": "npx playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.29.2",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.0.1",
    "autoprefixer": "^10.4.13",
    "electron": "^22.0.3",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-electron-plugin": "^0.7.4",
    "vite-plugin-electron-renderer": "^0.11.4"
  },
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "zod": "^3.21.4"
  }
}
